    },
    "text": {
      "type": "string",
      "required": true
    },
    "startAt": {
      "type": "datetime",
      "required": true
    },
    "endAt": {
      "type": "datetime",
      "required": true
    },
    "preWord": {
      "type": "enumeration",
      "required": true,
